<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_mypage_pick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_tapbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/pick_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_medium"
            android:text="찜한 여행지 "
            android:textColor="#BDBDBD"
            android:textSize="12dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_medium"
            android:text="19"
            android:textColor="#BDBDBD"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/pick_num"
            tools:ignore="MissingConstraints,UnknownId" />

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:background="#00FF0000"
            android:text="편집"
            app:layout_constraintEnd_toEndOf="@+id/view"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp"
        android:layout_margin="16dp"
        android:columnCount ="3"
        app:layout_constraintTop_toBottomOf="@+id/layout_tapbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/a_img1"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img"
                    app:layout_constraintEnd_toEndOf="@id/layout_a" />

                <ImageView
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img"
                    app:layout_constraintEnd_toEndOf="@id/layout_a"
                    app:layout_constraintTop_toBottomOf="@+id/a_img1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintLeft_toRightOf="@+id/layout_a"
                app:layout_constraintVertical_weight="2"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="214dp"
                    android:layout_height="214dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_a"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/c_img1"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img" />

                <ImageView
                    android:id="@+id/c_img2"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/c_img1"
                    android:src="@drawable/home_ex_back_img" />

                <ImageView
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/c_img2"
                    android:src="@drawable/home_ex_back_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintTop_toBottomOf="@+id/layout_c"
                app:layout_constraintVertical_weight="2"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="214dp"
                    android:layout_height="214dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/layout_c"
                app:layout_constraintLeft_toRightOf="@+id/layout_b2"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/a2_img1"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img"
                    app:layout_constraintEnd_toEndOf="@id/layout_a2" />

                <ImageView
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img"
                    app:layout_constraintEnd_toEndOf="@id/layout_a2"
                    app:layout_constraintTop_toBottomOf="@+id/a2_img1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_b2"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/c2_img1"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img" />

                <ImageView
                    android:id="@+id/c2_img2"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/c2_img1"
                    android:src="@drawable/home_ex_back_img" />

                <ImageView
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/c2_img2"
                    android:src="@drawable/home_ex_back_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>