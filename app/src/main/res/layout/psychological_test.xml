<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q."
            android:textSize="32dp"
            android:layout_marginBottom="5pt"
            android:layout_marginRight="67pt"
            android:layout_marginTop="50pt"
            android:textColor="#EF5A74"
            android:textStyle="bold"
            />

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당신의\n여행 스타일은?"
            android:textSize="32dp"
            android:layout_marginBottom="0pt"
            android:layout_marginRight="30pt"
            android:textColor="#424242"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="63pt"
            android:layout_marginTop="5pt"
            android:layout_marginBottom="30pt"
            android:text="(1/3)"
            android:textSize="16dp"
            android:textColor="#424242"
            />

        <Button
            android:id="@id/first"
            android:backgroundTint="#FFFFFF"
            android:layout_marginTop="10pt"
            android:layout_marginRight="10pt"
            android:layout_marginLeft="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="남는건 사진 뿐! 돌아다니며 사진찍기"
            android:textColor="#424242"
            android:textStyle="bold"
            />

        <Button
            android:id="@id/second"
            android:backgroundTint="#FFFFFF"
            android:layout_marginTop="10pt"
            android:layout_marginRight="10pt"
            android:layout_marginLeft="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="여행은 힐링이지! 푹 쉴 수 있는 호캉스"
            android:textColor="#424242"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="75pt"
            android:layout_marginTop="50pt"
            android:layout_marginBottom="30pt"
            android:text="이전"
            android:textSize="16dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="75pt"
            android:layout_marginTop="-40pt"
            android:layout_marginBottom="0pt"
            android:text="다음"
            android:textSize="16dp"

            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>