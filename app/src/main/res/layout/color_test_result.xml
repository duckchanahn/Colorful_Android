<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar_non"
        layout="@layout/toolbar_non"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:scaleType="centerCrop"
        android:src="@drawable/picture_psy_color_result"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/notosanskr_bold"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:text="컬러 테스트 결과"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="한번 시작하면 끝을 보는"
        android:textColor="@color/gary_21"
        android:fontFamily="@font/notosanskr_medium"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:gravity="center"
        android:text="끈기왕 여행가"
        android:fontFamily="@font/notosanskr_bold"
        android:textSize="24dp"
        android:textColor="@color/gary_21"
        app:layout_constraintTop_toBottomOf="@+id/textView1"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/notosanskr_regular"
        android:textSize="14dp"
        android:textColor="#616161"
        android:text="한번 시작한 일은 끝을 봐야 하는 당신!\n차분하면서도 따뜻한 색을 추천드려요.\n너무 탁한 색상은 피해주시면 좋습니다."
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_color_chip"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/color_chip1"
            android:layout_width="88dp"
            android:layout_height="112dp"
            android:background="@drawable/psy_test_answer_non_select_btn"
            android:elevation="1dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28.5dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_water_drop"
                app:layout_constraintStart_toStartOf="@+id/color_chip1"
                app:layout_constraintTop_toTopOf="@+id/color_chip1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/notosanskr_regular"
                android:gravity="center"
                android:text="컬러이름"
                android:textColor="#757575"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/color_chip1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/color_chip2"
            android:layout_width="88dp"
            android:layout_height="112dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/psy_test_answer_non_select_btn"
            android:elevation="1dp"
            app:layout_constraintStart_toEndOf="@+id/color_chip1"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28.5dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_water_drop"
                app:layout_constraintStart_toStartOf="@+id/color_chip2"
                app:layout_constraintTop_toTopOf="@+id/color_chip2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/notosanskr_regular"
                android:gravity="center"
                android:text="컬러이름"
                android:textColor="#757575"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/color_chip2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/color_chip3"
            android:layout_width="88dp"
            android:layout_height="112dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/psy_test_answer_non_select_btn"
            android:elevation="1dp"
            app:layout_constraintStart_toEndOf="@+id/color_chip2"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28.5dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_water_drop"
                app:layout_constraintStart_toStartOf="@+id/color_chip3"
                app:layout_constraintTop_toTopOf="@+id/color_chip3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/notosanskr_regular"
                android:gravity="center"
                android:text="컬러이름"
                android:textColor="#757575"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/color_chip3" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/personal_color_test_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_424242_color"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:text="퍼스널 컬러 찾으러 가기"
        android:fontFamily="@font/notosanskr_bold"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/psy_color_test_button"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/psy_color_test_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_424242_color"
        android:text="내 컬러와 찰떡인 여행지 보러 가기"
        android:padding="8dp"
        android:fontFamily="@font/notosanskr_bold"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>