<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_searchpage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scroll_horizon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/layout_chips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:chipSpacingHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:minHeight="32dp"
                    android:text="초기화"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="#616161"
                    app:chipEndPadding="12dp"
                    app:chipIcon="@drawable/btn_loop"
                    app:chipStartPadding="12dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:minHeight="32dp"
                    android:text="색상1"
                    android:textColor="#616161"
                    android:textSize="14dp"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="#FAFAFA"
                    app:chipEndPadding="12dp"
                    app:chipStartPadding="12dp" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:minHeight="32dp"
                    android:text="색상2"
                    android:textColor="#616161"
                    android:textSize="14dp"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="#FAFAFA"
                    app:chipEndPadding="12dp"
                    app:chipStartPadding="12dp" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/medium_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/scroll_horizon">


        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="1dp"
            android:textColor="#757575"
            android:fontFamily="@font/notosanskr_medium"
            android:textSize="12dp"
            android:text="검색 결과 "
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/result_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="1dp"
            android:textColor="#757575"
            android:fontFamily="@font/notosanskr_medium"
            android:textSize="12dp"
            android:text="129"
            app:layout_constraintStart_toEndOf="@+id/result"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="1dp"
            android:textColor="#757575"
            android:fontFamily="@font/notosanskr_medium"
            android:textSize="12dp"
            android:text="개"
            app:layout_constraintStart_toEndOf="@+id/result_num"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medium_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/a_img1"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img"
                    app:layout_constraintEnd_toEndOf="@id/layout_a" />

                <ImageView
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img"
                    app:layout_constraintEnd_toEndOf="@id/layout_a"
                    app:layout_constraintTop_toBottomOf="@+id/a_img1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintLeft_toRightOf="@+id/layout_a"
                app:layout_constraintVertical_weight="2"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="214dp"
                    android:layout_height="214dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_a"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/c_img1"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img" />

                <ImageView
                    android:id="@+id/c_img2"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/c_img1"
                    android:src="@drawable/home_ex_back_img" />

                <ImageView
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/c_img2"
                    android:src="@drawable/home_ex_back_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintTop_toBottomOf="@+id/layout_c"
                app:layout_constraintVertical_weight="2"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="214dp"
                    android:layout_height="214dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/layout_c"
                app:layout_constraintLeft_toRightOf="@+id/layout_b2"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/a2_img1"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img"
                    app:layout_constraintEnd_toEndOf="@id/layout_a2" />

                <ImageView
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img"
                    app:layout_constraintEnd_toEndOf="@id/layout_a2"
                    app:layout_constraintTop_toBottomOf="@+id/a2_img1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_b2"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/c2_img1"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ex_back_img" />

                <ImageView
                    android:id="@+id/c2_img2"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/c2_img1"
                    android:src="@drawable/home_ex_back_img" />

                <ImageView
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/c2_img2"
                    android:src="@drawable/home_ex_back_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>