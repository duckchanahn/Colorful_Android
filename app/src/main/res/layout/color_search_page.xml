                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:fontFamily="@font/notosanskr_bold"
                    android:minHeight="32dp"
                    android:text="대전"
                    android:textSize="14dp"
                    app:checkedIconEnabled="false"
