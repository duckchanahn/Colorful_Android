<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personal_color_select_image_layout"
        android:layout_marginBottom="30pt"
        />

        <Button
            android:id="@id/get_image_camera_button"
            android:backgroundTint="#EF5A74"
            android:layout_marginTop="10pt"
            android:layout_marginRight="10pt"
            android:layout_marginLeft="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카메라에서 가져오기"
            android:textColor="#FFFFFF"

        />

        <Button
            android:id="@id/get_image_gallery_button"
            android:backgroundTint="#EF5A74"
            android:layout_marginTop="10pt"
            android:layout_marginRight="10pt"
            android:layout_marginLeft="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="갤러리에서 가져오기"
            android:textColor="#FFFFFF"
            />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>