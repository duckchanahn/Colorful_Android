<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personal_select_description"
        android:layout_marginBottom="30pt"
        />

        <ImageView
            android:id="@id/test_user_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/test_main_puzzle_image"
            />

        <Button
            android:id="@id/get_image_camera_button"
            android:backgroundTint="#EF5A74"
            android:layout_marginTop="10pt"
            android:layout_marginRight="10pt"
            android:layout_marginLeft="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/personal_select_getCamera"
            android:textColor="#FFFFFF"

        />

        <Button
            android:id="@id/get_image_gallery_button"
            android:backgroundTint="#EF5A74"
            android:layout_marginTop="10pt"
            android:layout_marginRight="10pt"
            android:layout_marginLeft="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/personal_select_getGallery"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@id/next_personal_color_select_image"
            android:backgroundTint="#FFFFFF"
            android:layout_marginTop="10pt"
            android:layout_marginRight="10pt"
            android:layout_marginLeft="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textColor="#000000"
            />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>