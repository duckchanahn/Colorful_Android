<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:contentInsetStart="0dp"
    android:background="@drawable/toolbar_layout_test">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="78dp"
            android:layout_marginBottom="8dp"
            app:queryHint="검색어를 입력해주세요."
            android:background="@drawable/searchbox_black"
            app:layout_constraintEnd_toStartOf="@id/btn_filter"
            app:layout_constraintStart_toStartOf="parent"
            app:searchIcon="@drawable/icon_search_black"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_filter"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/searchbox_black"
            android:drawableStart="@drawable/icon_filter_black"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />



    </RelativeLayout>



</androidx.appcompat.widget.Toolbar>