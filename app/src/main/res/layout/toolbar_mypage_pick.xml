<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentInsetStart="0dp"
    android:background="@drawable/toolbar_layout_test"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="0dp"
            android:background="@color/white"
            android:paddingStart="17.6dp"
            android:paddingTop="18.5dp"
            android:paddingEnd="18.5dp"
            android:paddingBottom="17.6dp"
            android:src="@drawable/chevron_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/btn_back"
            android:fontFamily="@font/notosanskr_bold"
            android:text="찜한 여행지"
            android:textColor="@color/gary_21"
            android:textSize="18dp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:background="@color/white"
            android:paddingStart="17.6dp"
            android:paddingTop="18.5dp"
            android:paddingEnd="18.5dp"
            android:paddingBottom="17.6dp"
            android:src="@drawable/icon_filter_black" />


    </RelativeLayout>



</androidx.appcompat.widget.Toolbar>