<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.NaviActivity">

    <ListView
        android:id="@+id/mainFramLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/nav_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:columnCount="4"
            app:labelVisibilityMode="unlabeled">

            <Button
                android:id="@+id/homeFragment"
                android:background="@drawable/ic_nav_home"
                app:itemIconTint="@color/bottom_nav_color"
                android:title="" />

            <Button
                android:id="@+id/searchFragment"
                android:background="@drawable/ic_nav_search"
                app:itemIconTint="@color/bottom_nav_color"
                android:title="" />

            <Button
                android:id="@+id/colorFragment"
                android:background="@drawable/ic_nav_color"
                app:itemIconTint="@color/bottom_nav_color"
                android:title="" />

            <Button
                android:id="@+id/mypageFragment"
                android:background="@drawable/ic_nav_mypage"
                app:itemIconTint="@color/bottom_nav_color"
                android:title="" />

        </GridLayout>
    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>