<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_layout"
            android:layout_width="280dp"
            android:layout_height="84dp"
            android:clickable="true"
            android:background="@drawable/psy_test_answer_button">

            <TextView
                android:id="@+id/tour_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/notosanskr_bold"
                android:text="강원도 여행"
                android:textSize="14dp"
                android:textColor="@color/gary_21"
                app:layout_constraintStart_toStartOf="@+id/card_layout"
                app:layout_constraintTop_toTopOf="@+id/card_layout" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/options_vertical"
                android:background="#00FFFFFF"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@+id/card_layout"
                app:layout_constraintEnd_toEndOf="@+id/card_layout"/>

            <TextView
                android:id="@+id/tour_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/notosanskr_medium"
                android:textColor="#424242"
                android:text="22.8.21-22.8.22"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="@+id/card_layout"
                app:layout_constraintBottom_toBottomOf="@+id/card_layout" />

            <TextView
                android:id="@+id/tour_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/notosanskr_regular"
                android:textColor="#757575"
                android:text="3개"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/card_layout"
                app:layout_constraintBottom_toBottomOf="@+id/card_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>