<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_bottom_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bottom_sheet2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        app:layout_behavior="@string/bottom_sheet_behavior"
        android:orientation="vertical"
        android:background="@color/white">

        <View
            android:id="@+id/dialog_bar"
            android:layout_width="84dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bottom_dialog_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/tour_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:textSize="24dp"
                android:textColor="@color/gary_21"
                android:text="곡성 세계장미축제"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/chevron_down_21" />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    app:chipSpacingHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tour_name">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/notosanskr_regular"
                        android:background="#EEEEEE"
                        android:textColor="#616161"
                        android:minHeight="32dp"
                        android:text="키워드"
                        android:textSize="14dp"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:minHeight="32dp"
                        android:fontFamily="@font/notosanskr_regular"
                        android:background="#EEEEEE"
                        android:textColor="#616161"
                        android:text="키워드"
                        android:textSize="14dp"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:minHeight="32dp"
                        android:fontFamily="@font/notosanskr_regular"
                        android:background="#EEEEEE"
                        android:textColor="#616161"
                        android:text="키워드"
                        android:textSize="14dp"
                        app:chipEndPadding="12dp"
                        app:chipStartPadding="12dp" />
                </com.google.android.material.chip.ChipGroup>

                <View
                    android:id="@+id/division_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center"
                    android:background="@drawable/division_line"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:textSize="18dp"
                    android:textColor="@color/gary_21"
                    android:text="소개"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:background="#FAFAFA"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:id="@+id/icon1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_location_42"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/notosanskr_bold"
                            android:textSize="14dp"
                            android:textColor="@color/gary_21"
                            android:text="위치"
                            app:layout_constraintStart_toEndOf="@+id/icon1"
                            tools:ignore="MissingConstraints" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/explain1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="115dp"
                        app:layout_constraintStart_toEndOf="@+id/layout_intro"
                        android:fontFamily="@font/notosanskr_regular"
                        android:textSize="14dp"
                        android:textColor="#616161"
                        android:text="전라남도 곡성군 기차마을로\n252-16"
                        tools:ignore="MissingConstraints" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/explain1"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_call_42"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/notosanskr_bold"
                            android:textSize="14dp"
                            android:textColor="@color/gary_21"
                            android:text="전화번호"
                            app:layout_constraintStart_toEndOf="@+id/icon2"
                            tools:ignore="MissingConstraints" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/explain2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="115dp"
                        app:layout_constraintTop_toBottomOf="@+id/explain1"
                        app:layout_constraintStart_toEndOf="@+id/layout_intro"
                        android:fontFamily="@font/notosanskr_regular"
                        android:textSize="14dp"
                        android:textColor="#616161"
                        android:text="061-363-8379"
                        tools:ignore="MissingConstraints" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/explain2"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:id="@+id/icon3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_homepage_42"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/notosanskr_bold"
                            android:textSize="14dp"
                            android:textColor="@color/gary_21"
                            android:text="홈페이지"
                            app:layout_constraintStart_toEndOf="@+id/icon3"
                            tools:ignore="MissingConstraints" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/explain3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="115dp"
                        app:layout_constraintTop_toBottomOf="@+id/explain2"
                        app:layout_constraintStart_toEndOf="@+id/layout_intro"
                        android:fontFamily="@font/notosanskr_regular"
                        android:textSize="14dp"
                        android:textColor="#616161"
                        android:text="http://www.gokseong.go.kr/tour"
                        tools:ignore="MissingConstraints" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/explain3"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:id="@+id/icon4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_clock_42"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/notosanskr_bold"
                            android:textSize="14dp"
                            android:textColor="@color/gary_21"
                            android:text="운영시간"
                            app:layout_constraintStart_toEndOf="@+id/icon4"
                            tools:ignore="MissingConstraints" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/explain4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="115dp"
                        app:layout_constraintTop_toBottomOf="@+id/explain3"
                        app:layout_constraintStart_toEndOf="@+id/layout_intro"
                        android:fontFamily="@font/notosanskr_regular"
                        android:textSize="14dp"
                        android:textColor="#616161"
                        android:text="2022. 5. 21.(토) ~ 6. 6.(월)
                \n2022. 5. 21.(토) ~ 6. 6.(월)
                \n2022. 5. 21.(토) ~ 6. 6.(월)
                \n2022. 5. 21.(토) ~ 6. 6.(월)"
                        tools:ignore="MissingConstraints" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/explain4"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:id="@+id/icon5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_parking_42"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/notosanskr_bold"
                            android:textSize="14dp"
                            android:textColor="@color/gary_21"
                            android:text="주차시설"
                            app:layout_constraintStart_toEndOf="@+id/icon5"
                            tools:ignore="MissingConstraints" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/explain5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="115dp"
                        app:layout_constraintTop_toBottomOf="@+id/explain4"
                        app:layout_constraintStart_toEndOf="@+id/layout_intro"
                        android:fontFamily="@font/notosanskr_regular"
                        android:textSize="14dp"
                        android:textColor="#616161"
                        android:text="있음"
                        tools:ignore="MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="일제히 꽃문을 연 1,004 종의 장미와 함께 펼쳐지는 화려한
            \n봄의 페스티벌!
            \n매 년 5월, 수억만 송이의 장미가 향연을 이루는 곡성세계장미축제가 곡성 기차마을 장미공원에서 개최된다.
            \n쉽게 볼 수 없는 전 세계 명품 장미를 한 곳에서 볼 수 있는 국내
            \n유일의 기회!
            \n열흘 이상 이어지는 곡성세계장미축제는 매년 30만명 이상이 찾는 대표 꽃 축제이다.
            \n축제장은 늘 다양한 이벤트와 공연, 즐길거리가 가득하여 가족, 친구, 연인들의 발길이 끊이질 않는다.
            \n75,000㎡를 가득 채운 장미향에 취하고 싶다면 매년 5월 개최되는 <곡성세계장미축제>를 놓치지 말자."
                    android:textColor="#616161"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/division_line2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center"
                    android:background="@drawable/division_line"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:textSize="18dp"
                    android:textColor="@color/gary_21"
                    android:text="여행지 컬러"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_color_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/color_chip1"
                        android:layout_width="88dp"
                        android:layout_height="112dp"
                        android:background="@drawable/psy_test_answer_non_select_btn"
                        android:elevation="1dp"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28.5dp"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/ic_water_drop"
                            app:layout_constraintStart_toStartOf="@+id/color_chip1"
                            app:layout_constraintTop_toTopOf="@+id/color_chip1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/notosanskr_regular"
                            android:gravity="center"
                            android:text="컬러이름"
                            android:textColor="#757575"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="@+id/color_chip1" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/color_chip2"
                        android:layout_width="88dp"
                        android:layout_height="112dp"
                        android:layout_marginStart="24dp"
                        android:background="@drawable/psy_test_answer_non_select_btn"
                        android:elevation="1dp"
                        app:layout_constraintStart_toEndOf="@+id/color_chip1"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28.5dp"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/ic_water_drop"
                            app:layout_constraintStart_toStartOf="@+id/color_chip2"
                            app:layout_constraintTop_toTopOf="@+id/color_chip2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/notosanskr_regular"
                            android:gravity="center"
                            android:text="컬러이름"
                            android:textColor="#757575"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="@+id/color_chip2" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/color_chip3"
                        android:layout_width="88dp"
                        android:layout_height="112dp"
                        android:layout_marginStart="24dp"
                        android:background="@drawable/psy_test_answer_non_select_btn"
                        android:elevation="1dp"
                        app:layout_constraintStart_toEndOf="@+id/color_chip2"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28.5dp"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/ic_water_drop"
                            app:layout_constraintStart_toStartOf="@+id/color_chip3"
                            app:layout_constraintTop_toTopOf="@+id/color_chip3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/notosanskr_regular"
                            android:gravity="center"
                            android:text="컬러이름"
                            android:textColor="#757575"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="@+id/color_chip3" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/division_line3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center"
                    android:background="@drawable/division_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="22dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_bold"
                        android:textSize="18dp"
                        android:textColor="@color/gary_21"
                        android:text="지도"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/view_More"
                        android:background="#FF"
                        android:fontFamily="@font/notosanskr_medium"
                        android:textSize="12dp"
                        android:text="자세히보기"
                        android:textColor="#616161"
                        app:layout_constraintBottom_toBottomOf="@id/layout"
                        app:layout_constraintStart_toStartOf="@id/layout"
                        android:drawableRight="@drawable/chevron_right_61"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ex_map_img"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_weight="1"/>

            </LinearLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@id/color_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="112dp"
                android:background="@drawable/btn_424242_color"
                android:text="담기"
                android:padding="8dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageButton
                android:id="@+id/btn_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:background="#FF"
                android:src="@drawable/btn_heart_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/color_button"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:background="#FF"
                android:src="@drawable/btn_share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_heart"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>